@model List<TDDTestingMVC.Data.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<table id="clientesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Codigo)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Cedula)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Apellidos)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Nombres)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].FechaNacimiento)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Mail)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Telefono)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Direccion)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Estado)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Codigo</td>
                <td>@cliente.Cedula</td>
                <td>@cliente.Apellidos</td>
                <td>@cliente.Nombres</td>
                <td>@cliente.FechaNacimiento.ToString("yyyy-MM-dd")</td>
                <td>@cliente.Mail</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Direccion</td>
                <td>@(cliente.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Codigo" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Codigo" class="btn btn-danger">Eliminar</a>

                </td>

            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Cliente" asp-action="Create">
    Agregar Cliente
</a>


